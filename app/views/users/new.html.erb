<div class="card p-4 shadow-sm mx-auto" style="max-width: 400px;">
  <h2 class="text-center mb-4">Sign Up</h2>

  <%= form_tag "/users", method: "post" do %>
    <div class="mb-3">
      <label class="form-label">Username</label>
      <%= text_field_tag "username", nil, class: "form-control", placeholder: "Choose a username" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Email</label>
      <%= text_field_tag "email", nil, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      <%= password_field_tag "password", nil, class: "form-control", placeholder: "Create a password" %>
    </div>

    <button type="submit" class="btn btn-success w-100">Sign Up</button>
  <% end %>

  <div class="text-center mt-3">
    <small>Already have an account? <%= link_to "Login", login_path %></small>
  </div>
</div>
