<div class="card p-4 shadow-sm mx-auto" style="max-width: 400px;">
  <h2 class="text-center mb-4">Login</h2>

  <%= form_tag "/sessions", method: "post" do %>
    <div class="mb-3">
      <label class="form-label">Email</label>
      <%= text_field_tag "email", nil, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      <%= password_field_tag "password", nil, class: "form-control", placeholder: "Enter your password" %>
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>
  <% end %>

  <div class="text-center mt-3">
    <small>Don't have an account? <%= link_to "Sign up", signup_path %></small>
  </div>
</div>
