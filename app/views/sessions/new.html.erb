<h1>Login</h1>

<%= form_with url: login_path, local: true do |f| %>
  <p>
    <label for="email">Email</label>
    <%= f.text_field :email %>
  </p>
  <p>
    <label for="password">Password</label>
    <%= f.password_field :password %>
  </p>

  <%= f.submit "Login" %>
<% end %>

<%= flash[:alert] %>

<p>Don't have an account? <%= link_to "Signup", signup_path %></p>