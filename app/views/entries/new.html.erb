<div class="card p-4 shadow-sm mx-auto" style="max-width: 500px;">
  <h2 class="text-center mb-4">Create a New Post</h2>

  <%= form_with model: [@place, @entry], local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <label class="form-label">Title</label>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <%= f.text_area :description, class: "form-control", placeholder: "Write something...", rows: 3 %>
    </div>

    <div class="mb-3">
      <label class="form-label">Date</label>
      <%= f.date_field :occurred_on, class: "form-control" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Upload Image</label>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <button type="submit" class="btn btn-primary w-100">Create Post</button>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "Cancel", place_path(@place), class: "btn btn-outline-secondary" %>
  </div>
</div>
